{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/modifyUser.schema.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "password": "password",
            "first_name": "name",
            "last_name": "name",
            "phone": "phone mun",
            "email": "email@email.com"
        }
    ],
    "required": ["password", "first_name", "last_name", "phone", "email"],
    "properties": {
        "password": {
            "$id": "#/properties/password",
            "default": "",
            "examples": ["password"],
            "title": "New users password",
            "type": "string"
        },
        "first_name": {
            "$id": "#/properties/first_name",
            "default": "",
            "examples": ["name"],
            "title": "Users first name",
            "type": "string"
        },
        "last_name": {
            "$id": "#/properties/last_name",
            "default": "",
            "examples": ["name"],
            "title": "Users last name",
            "type": "string"
        },
        "phone": {
            "$id": "#/properties/phone",
            "default": "",
            "examples": ["phone mun"],
            "title": "Users phone number",
            "type": "string",
            "maxLength": 15
        },
        "email": {
            "$id": "#/properties/email",
            "default": "",
            "examples": ["email@email.com"],
            "title": "Users email address",
            "type": "string"
        }
    },
    "additionalProperties": false
}
